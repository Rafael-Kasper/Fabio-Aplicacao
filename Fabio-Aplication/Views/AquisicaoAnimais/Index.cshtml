@model IEnumerable<Fabio_Aplication.Models.AQUISICAO_ANIMAIS>

@{
    ViewBag.Title = "Funcionários";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Registro de Aquisição de Animais</h2>

    <p>
        <a href="@Url.Action("Create")" class="btn btn-primary">
            <i class="glyphicon glyphicon-plus"></i> Novo Funcionário
        </a>
    </p>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Tipo</th>
                <th>Quantidade</th>
                <th>Valor Individual</th>
                <th>Observações</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.TIPO)</td>
                    <td>@Html.DisplayFor(modelItem => item.QUANTIDADE)</td>
                    <td>@Html.DisplayFor(modelItem => item.VALOR_UNITARIO)</td>
                    <td>@Html.DisplayFor(modelItem => item.OBS)</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.ID })" class="btn btn-warning btn-sm">
                            <i class="glyphicon glyphicon-edit"></i> Editar
                        </a>
                        <a href="@Url.Action("Delete", new { id = item.ID })" class="btn btn-danger btn-sm">
                            <i class="glyphicon glyphicon-trash"></i> Excluir
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>