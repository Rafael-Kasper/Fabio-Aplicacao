@model IEnumerable<Fabio_Aplication.Models.AQUISICAO_ANIMAIS>

@{
    ViewBag.Title = "Registro de Aquisição de Animais";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-content">
    <div class="header-section">
        <h1 class="page-title">
            <i class="fas fa-paw"></i>Registro de Aquisição de Animais
        </h1>
        <a href="@Url.Action("Create")" class="new-button">
            <i class="fas fa-plus-circle"></i>Novo Registro
        </a>
    </div>

    <div class="content-card">
        @if (Model.Any())
        {
            <div class="table-container">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Tipo</th>
                            <th>Quantidade</th>
                            <th>Valor Individual</th>
                            <th>Observações</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="user-cell">
                                    <i class="fas fa-tag"></i>
                                    @Html.DisplayFor(modelItem => item.TIPO)
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.QUANTIDADE)</td>
                                <td>@Html.DisplayFor(modelItem => item.VALOR_UNITARIO)</td>
                                <td class="observations-cell">
                                    @Html.DisplayFor(modelItem => item.OBS)
                                </td>
                                <td class="actions-cell">
                                    <a href="@Url.Action("Edit", new { id = item.ID })" class="action-btn edit-btn">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="@Url.Action("Delete", new { id = item.ID })" class="action-btn delete-btn">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state">
                <i class="fas fa-box-open"></i>
                <h3>Nenhum registro encontrado</h3>
                <p>Clique no botão acima para adicionar um novo registro</p>
            </div>
        }
    </div>

    <div class="totals-container">
        <div class="total-card">
            <i class="fas fa-cubes"></i>
            <div class="total-content">
                <span class="total-label">Total de Animais:</span>
                <span class="total-value">@ViewBag.TotalQuantidade</span>
            </div>
        </div>

        <div class="total-card">
            <i class="fas fa-coins"></i>
            <div class="total-content">
                <span class="total-label">Total Unitário:</span>
                <span class="total-value">@ViewBag.TotalValorFormatado</span>
            </div>
        </div>
    </div>
</div>

<style>

    .totals-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .total-card {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        padding: 20px;
        display: flex;
        align-items: center;
        gap: 20px;
    }

        .total-card i {
            font-size: 2.5rem;
            color: #24E3A7;
        }

    .fa-cubes {
        color: #4a90e2;
    }

    .fa-coins {
        color: #f6c23e;
    }

    .total-content {
        display: flex;
        flex-direction: column;
    }

    .total-label {
        color: #6c757d;
        font-size: 0.9rem;
        margin-bottom: 5px;
    }

    .total-value {
        color: #2c3e50;
        font-size: 1.5rem;
        font-weight: 600;
    }
    /* Mantendo o mesmo padrão de estilo */
    .main-content {
        max-width: 1200px;
        margin: 40px auto;
        padding: 0 20px;
    }

    .header-section {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .page-title {
        font-size: 2rem;
        color: #2c3e50;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .new-button {
        background: #24E3A7;
        color: white;
        padding: 12px 25px;
        border-radius: 8px;
        text-decoration: none;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .new-button:hover {
            background: #1ec191;
            transform: translateY(-2px);
        }

    .content-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        overflow: hidden;
    }

    .data-table {
        width: 100%;
        border-collapse: collapse;
    }

        .data-table th,
        .data-table td {
            padding: 16px 20px;
            text-align: left;
        }

        .data-table th {
            background: #24E3A7;
            color: white;
            font-weight: 600;
        }

        .data-table tr {
            border-bottom: 1px solid #eee;
        }

            .data-table tr:hover {
                background: #f8f9fa;
            }

    .user-cell {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .observations-cell {
        max-width: 300px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .actions-cell {
        display: flex;
        gap: 12px;
    }

    .action-btn {
        padding: 8px 12px;
        border-radius: 6px;
        text-decoration: none;
        transition: all 0.2s ease;
    }

    .edit-btn {
        color: #ffc107;
        background: rgba(255, 193, 7, 0.1);
    }

        .edit-btn:hover {
            background: rgba(255, 193, 7, 0.2);
        }

    .delete-btn {
        color: #dc3545;
        background: rgba(220, 53, 69, 0.1);
    }

        .delete-btn:hover {
            background: rgba(220, 53, 69, 0.2);
        }

    .empty-state {
        text-align: center;
        padding: 50px 20px;
        color: #6c757d;
    }

        .empty-state i {
            font-size: 4rem;
            margin-bottom: 20px;
        }

    .fas {
        font-size: 1.1em;
    }
</style>

<script>
    $(document).ready(function () {
        // Tooltips
        $('[title]').tooltip({
            trigger: 'hover',
            placement: 'top'
        });
    });
</script>