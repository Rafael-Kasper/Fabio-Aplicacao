@model Fabio_Aplication.Models.AQUISICAO_ANIMAIS

@{
    ViewBag.Title = "Excluir Animal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-container">
    <div class="header-section">
        <h2 class="title">
            <i class="fas fa-paw"></i>Excluir Animal
        </h2>
        <a href="@Url.Action("Index")" class="back-button">
            <i class="fas fa-arrow-left"></i>Voltar
        </a>
    </div>

    <div class="form-card">
        <h3 class="confirmation-message">Tem certeza que deseja excluir este animal?</h3>

        <div class="details-container">
            <dl class="details-list">
                <div class="detail-item">
                <dt>Tipo:</dt>
                <dd>@Html.DisplayFor(model => model.TIPO)</dd>
        </div>

        <div class="detail-item">
            <dt>Quantidade:</dt>
            <dd>@Html.DisplayFor(model => model.QUANTIDADE)</dd>
        </div>

        <div class="detail-item">
            <dt>Valor Unitário:</dt>
            <dd>@Html.DisplayFor(model => model.VALOR_UNITARIO)</dd>
        </div>
        </dl>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions">
            <button type="submit" class="delete-button">
                <i class="fas fa-trash-alt"></i>Confirmar Exclusão
            </button>
        </div>
    }
</div>
</div>

<style>
    /* Estilos consistentes com as demais páginas */
    .main-container {
        max-width: 800px;
        margin: 40px auto;
        padding: 0 20px;
    }

    .header-section {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 40px;
    }

    .title {
        color: #2c3e50;
        font-size: 2rem;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .form-card {
        background: #fff;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        padding: 30px;
    }

    .confirmation-message {
        color: #dc3545;
        margin-bottom: 30px;
        text-align: center;
        font-size: 1.25rem;
    }

    .details-container {
        margin: 25px 0;
    }

    .details-list {
        display: grid;
        gap: 20px;
    }

    .detail-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px;
        background: #f8f9fa;
        border-radius: 8px;
        transition: all 0.2s ease;
    }

        .detail-item:hover {
            transform: translateY(-2px);
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        }

    dt {
        font-weight: 600;
        color: #2c3e50;
    }

    dd {
        margin: 0;
        color: #6c757d;
        font-weight: 500;
    }

    .back-button {
        background: #f8f9fa;
        color: #2c3e50;
        padding: 10px 25px;
        border-radius: 8px;
        text-decoration: none;
        transition: all 0.3s ease;
    }

        .back-button:hover {
            background: #e9ecef;
            transform: translateY(-2px);
        }

    .delete-button {
        background: #dc3545;
        color: white;
        width: 100%;
        padding: 15px;
        border: none;
        border-radius: 8px;
        font-size: 1.1rem;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-top: 30px;
    }

        .delete-button:hover {
            background: #c82333;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(220, 53, 69, 0.3);
        }

    .fas {
        margin-right: 8px;
    }
</style>