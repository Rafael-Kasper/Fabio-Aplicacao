<script>
    const mobileScreen = window.matchMedia("(max-width: 992px)");

    // Atualize o código para
    $(document).ready(function () {
        // Dropdowns
        $(".dashboard-nav-dropdown-toggle").click(function () {
            const dropdown = $(this).closest(".dashboard-nav-dropdown");
            dropdown.toggleClass("show");
            dropdown.find(".dashboard-nav-dropdown-menu").slideToggle(300);
            $(".dashboard-nav-dropdown").not(dropdown).removeClass("show").find(".dashboard-nav-dropdown-menu").slideUp(300);
        });

        // Menu toggle
        $(".menu-toggle").click(function (e) {
            e.preventDefault();
            if (mobileScreen.matches) {
                $(".dashboard-nav").toggleClass("mobile-show");
                $(this).find("i").toggleClass("fa-times fa-bars");
            } else {
                $(".dashboard").toggleClass("dashboard-compact");
            }
        });

        // Fechar menu ao clicar fora (mobile)
        $(document).click(function (e) {
            if (!$(e.target).closest('.dashboard-nav').length &&
                !$(e.target).closest('.menu-toggle').length &&
                $('.dashboard-nav').hasClass('mobile-show')) {
                $('.dashboard-nav').removeClass('mobile-show');
                $('.menu-toggle i').removeClass('fa-times').addClass('fa-bars');
            }
        });
    });
</script>