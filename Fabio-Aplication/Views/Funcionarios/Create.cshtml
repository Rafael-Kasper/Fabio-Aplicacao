@model Fabio_Aplication.Models.FUNCIONARIOS

@{
    ViewBag.Title = "Cadastrar Funcionário";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-container">
    <div class="header-section">
        <h2 class="title">
            <i class="fas fa-user-plus"></i>Cadastrar Funcionário
        </h2>
        <a href="@Url.Action("Index")" class="back-button">
            <i class="fas fa-arrow-left"></i>Voltar
        </a>
    </div>

    <div class="form-card">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-content">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <!-- Campo Nome -->
                <div class="form-group">
                    @Html.LabelFor(model => model.NOME)
                    @Html.EditorFor(model => model.NOME, new { htmlAttributes = new { @class = "form-control", placeholder = "Digite o nome completo" } })
                    @Html.ValidationMessageFor(model => model.NOME, "", new { @class = "text-danger" })
                </div>

                <!-- Campo Salário -->
                <div class="form-group">
                    @Html.LabelFor(model => model.SALARIO)
                    @Html.EditorFor(model => model.SALARIO, new { htmlAttributes = new { @class = "form-control", placeholder = "Informe o salário" } })
                    @Html.ValidationMessageFor(model => model.SALARIO, "", new { @class = "text-danger" })
                </div>

                <!-- Botão Submit -->
                <button type="submit" class="submit-button">
                    <i class="fas fa-save"></i>Salvar Cadastro
                </button>
            </div>
        }
    </div>
</div>

<style>
    /* Layout Principal */
    .main-container {
        max-width: 800px;
        margin: 40px auto;
        padding: 0 20px;
    }

    /* Cabeçalho */
    .header-section {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 40px;
    }

    .title {
        color: #2c3e50;
        font-size: 2rem;
        margin: 0;
    }

    /* Card do Formulário */
    .form-card {
        background: #fff;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        padding: 30px;
    }

    /* Elementos do Formulário */
    .form-group {
        margin-bottom: 30px;
    }

    .form-control {
        width: 100%;
        padding: 12px 20px;
        border: 2px solid #e0e0e0;
        border-radius: 8px;
        font-size: 1rem;
        transition: border-color 0.3s ease;
    }

        .form-control:focus {
            border-color: #24E3A7;
            outline: none;
            box-shadow: 0 0 0 3px rgba(36, 227, 167, 0.2);
        }

    /* Botões */
    .back-button {
        background: #f8f9fa;
        color: #2c3e50;
        padding: 10px 25px;
        border-radius: 8px;
        text-decoration: none;
        transition: all 0.3s ease;
    }

        .back-button:hover {
            background: #e9ecef;
            transform: translateY(-2px);
        }

    .submit-button {
        background: #24E3A7;
        color: white;
        width: 100%;
        padding: 15px;
        border: none;
        border-radius: 8px;
        font-size: 1.1rem;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .submit-button:hover {
            background: #1ec191;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(36, 227, 167, 0.3);
        }

    /* Validação */
    .text-danger {
        font-size: 0.9rem;
        margin-top: 5px;
        display: block;
    }

    /* Ícones */
    .fas {
        margin-right: 8px;
    }
</style>

<script>
    // Mantido o mesmo JavaScript para formatação do salário
    $(document).ready(function () {
        $('#SALARIO').on('input', function () {
            let value = $(this).val().replace(/\D/g, '');
            value = (value / 100).toLocaleString('pt-BR', {
                style: 'currency',
                currency: 'BRL'
            });
            $(this).val(value);
        });

        $('#NOME').focus();
    });
</script>