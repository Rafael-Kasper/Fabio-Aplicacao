@model IEnumerable<Fabio_Aplication.Models.FUNCIONARIOS>

@{
    ViewBag.Title = "Funcionários";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-lg">
    <div class="d-flex justify-content-between align-items-center mb-5 mt-4">
        <h2 class="display-5 mb-0">
            <i class=" mr-3"></i>Funcionários
        </h2>
        <a href="@Url.Action("Create")"
           class="btn btn-primary btn-lg btn-rounded position-relative overflow-hidden"
           style="background-color: #24E3A7; border:none; border-radius: 20px; margin-bottom: 20px; transition: all 0.3s ease;">

            <i class="fas fa-plus-circle mr-2" style="margin-right:10px;"></i>Novo Funcionário

            <div class="position-absolute w-100 h-100 bg-white"
                 style="top:0; left:0; opacity:0; transition: all 0.3s ease; pointer-events: none;"></div>
        </a>
    </div>

    <div class="card border-0 shadow-lg">
        <div class="card-body p-4">
            <div class="table-responsive">
                <table class="table table-hover table-lg mb-0">
                    <thead style="background-color:#24E3A7; padding:5px;">
                        <tr>
                            <th class="h5" style="padding:15px; color:white; font-weight:bold; ">Nome</th>
                            <th class="h5" style="padding: 15px; color: white; font-weight: bold; ">Salário</th>
                            <th class="h5" style="padding: 15px; color: white; font-weight: bold; ">Cadastro</th>
                            <th class="h5" style="padding: 15px; color: white; font-weight: bold; ">Última Alteração</th>
                            <th class=" h5 text-right" style="padding: 15px; color: white; font-weight: bold; ">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="align-middle">
                                <td class="h5">
                                    <i class="fas fa-user-tie mr-3 fa-lg text-primary" style=" color:#1a1a1a;"></i>
                                    @Html.DisplayFor(modelItem => item.NOME)
                                </td>
                                <td class="font-weight-bold text-success">
                                    @Html.DisplayFor(modelItem => item.SALARIO)
                                </td>
                                <td>
                                    <span class="badge badge-light py-2 px-3 h5">
                                        @item.DATACAD
                                    </span>
                                </td>
                                <td>
                                    <span class="badge badge-light py-2 px-3 h5">
                                        @item.DATAALT
                                    </span>
                                </td>
                                <td class="text-right">
                                    <div class="btn-group">
                                        <a href="@Url.Action("Edit", new { id = item.ID })"
                                           class="btn btn-sm btn-outline-primary"
                                           data-toggle="tooltip"
                                           title="Editar">
                                            <i class="fas fa-edit fa-lg" style="color:lawngreen;"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", new { id = item.ID })"
                                           class="btn btn-sm btn-outline-danger ml-2"
                                           data-toggle="tooltip"
                                           title="Excluir">
                                            <i class="fas fa-trash-alt fa-lg" style="color:red;"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                @if (!Model.Any())
                {
                    <div class="text-center py-5">
                        <i class="fas fa-users-slash fa-4x text-muted mb-4"></i>
                        <h4 class="text-muted mb-3">Nenhum funcionário cadastrado</h4>
                        <p class="text-muted h5">Clique no botão acima para adicionar</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


    <style>

        .btn-rounded:hover {
            transform: translateY(-2px) scale(1.02);
            box-shadow: 0 10px 20px rgba(36, 227, 167, 0.3) !important;
        }

        .btn-rounded:active {
            transform: translateY(1px) scale(0.98);
        }

        .btn-rounded:hover .position-absolute {
            animation: ripple 0.6s ease-out;
        }

        @@keyframes ripple {
            0% {
                transform: scale(0);
                opacity: 0.3;
            }

            100% {
                transform: scale(2);
                opacity: 0;
            }
        }

        .container-lg {
            max-width: 1400px; /* Largura máxima aumentada */
            padding-left: 30px;
            padding-right: 30px;
        }

        .table-lg th,
        .table-lg td {
            padding: 1.25rem; /* Espaçamento interno aumentado */
        }


        /* Estilos complementares que não conflitam com Site.css */
        .table-hover tbody tr {
            transition: background-color 0.2s ease;
        }

        .badge {
            font-size: 1.1rem;
            padding: 0.5em 0.75em;
        }

        .btn-outline-primary {
            border-width: 2px;
        }

        .thead-dark th {
            background-color: #2c3e50;
            color: white;
        }
    </style>


    <script>
        $(document).ready(function () {
            // Ativa tooltips
            $('[data-toggle="tooltip"]').tooltip();

            // Suaviza transições
            $('.table-hover tbody tr').css('transition', 'all 0.2s ease');
        });
    </script>
