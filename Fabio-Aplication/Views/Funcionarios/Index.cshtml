@model IEnumerable<Fabio_Aplication.Models.FUNCIONARIOS>
@using System.Linq

@{
    ViewBag.Title = "Funcionários";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-content">
    <div class="header-section">
        <h1 class="page-title">Funcionários</h1>
        <a href="@Url.Action("Create")" class="new-button">
            <i class="fas fa-plus-circle"></i>Novo Funcionário
        </a>
    </div>

    <div class="content-card">
        @if (Model != null && Model.Any())
        {
            <div class="table-container">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Salário Base</th>
                            <th>Último Salário Líquido</th>
                            <th>Mês Último Pagamento</th>
                            <th>Cadastro</th>
                            <th>Última Alteração</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var ultimoPagamento = item.PAGAMENTO_FUNCIONARIOS != null && item.PAGAMENTO_FUNCIONARIOS.Any()
                                ? item.PAGAMENTO_FUNCIONARIOS.OrderByDescending(p => p.DATA_PAGAMENTO).FirstOrDefault()
                                : null;

                            <tr>
                                <td class="user-cell">
                                    <i class="fas fa-user-tie"></i>
                                    @item.NOME
                                </td>
                                <td>R$ @String.Format("{0:N2}", item.SALARIO)</td>
                                <td>
                                    @if (ultimoPagamento != null)
                                    {
                                        <span style="color:green">
                                            R$ @String.Format("{0:N2}", ultimoPagamento.SALARIO_LIQUIDO)
                                        </span>
                                    }
                                    else
                                    {
                                        <span style="color:gray">Sem pagamento</span>
                                    }
                                </td>
                                <td>
                                    @if (ultimoPagamento != null)
                                    {
                                        @ultimoPagamento.DATA_PAGAMENTO.ToString("MM/yyyy")
                                    }
                                    else
                                    {
                                        <span style="color:gray">-</span>
                                    }
                                </td>
                                <td>
                                    @(item.DATAALT.HasValue ? item.DATAALT.Value.ToString("dd/MM/yyyy") : "-")
                                </td>
                                <td>
                                    @(item.DATAALT.HasValue ? item.DATAALT.Value.ToString("dd/MM/yyyy") : "-")
                                </td>
                                <td class="actions-cell">
                                    <a href="@Url.Action("Historico", "Pagamentos", new { funcionarioId = item.ID })" class="action-btn" title="Histórico de Pagamentos">
                                        <i class="fas fa-money-check-alt"></i>
                                    </a>
                                    <a href="@Url.Action("Edit", new { id = item.ID })" class="action-btn edit-btn" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="@Url.Action("Delete", new { id = item.ID })" class="action-btn delete-btn" title="Excluir">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state">
                <i class="fas fa-users-slash"></i>
                <h3>Nenhum funcionário cadastrado</h3>
                <p>Clique no botão acima para adicionar</p>
            </div>
        }
    </div>
</div>

<style>
    /* Layout Principal */
    .main-content {
        max-width: 1200px;
        margin: 40px auto;
        padding: 0 20px;
        transition: margin 0.3s ease;
    }

    /* Header */
    .header-section {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .page-title {
        font-size: 2rem;
        color: #2c3e50;
        margin: 0;
    }

    /* Botões */
    .new-button {
        background: #24E3A7;
        color: white;
        padding: 12px 25px;
        border-radius: 8px;
        text-decoration: none;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .new-button:hover {
            background: #1ec191;
            transform: translateY(-2px);
        }

    /* Tabela */
    .content-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        overflow: hidden;
    }

    .data-table {
        width: 100%;
        border-collapse: collapse;
    }

        .data-table th,
        .data-table td {
            padding: 16px 20px;
            text-align: left;
        }

        .data-table th {
            background: #24E3A7;
            color: white;
            font-weight: 600;
        }

        .data-table tr {
            border-bottom: 1px solid #eee;
        }

            .data-table tr:hover {
                background: #f8f9fa;
            }

    /* Células Específicas */
    .user-cell {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .date-badge {
        background: #f8f9fa;
        padding: 6px 12px;
        border-radius: 6px;
        font-size: 0.9rem;
    }

    .actions-cell {
        display: flex;
        gap: 12px;
    }

    /* Estado Vazio */
    .empty-state {
        text-align: center;
        padding: 50px 20px;
        color: #6c757d;
    }

        .empty-state i {
            font-size: 4rem;
            margin-bottom: 20px;
        }
</style>

<script>
    $(document).ready(function () {
        // Tooltips
        $('[title]').tooltip({
            trigger: 'hover',
            placement: 'top'
        });
    });
</script>