@model Fabio_Aplication.Models.FUNCIONARIOS

@{ ViewBag.Title = "Editar Funcionário";
                Layout = "~/Views/Shared/_Layout.cshtml"; }

<h2>Editar Funcionário</h2>

@using (Html.BeginForm())
{
@Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>FUNCIONARIOS</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @Html.HiddenFor(model => model.ID)

                    <div class="form-group">
                        @Html.LabelFor(model => model.NOME, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.NOME, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NOME, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.SALARIO, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.SALARIO, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SALARIO, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.DATACAD, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <p class="form-control-static">
                                @(Model.DATACAD.HasValue ? Model.DATACAD.Value.ToString("dd/MM/yyyy") : "-")
                            </p>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.DATAALT, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <p class="form-control-static">
                                @(Model.DATAALT.HasValue ? Model.DATAALT.Value.ToString("dd/MM/yyyy") : "-")
                            </p>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Salvar" class="btn btn-primary" />
                            @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-default" })
                        </div>
                    </div>
                </div>}

<style>
    /* Mantendo o mesmo padrão de estilo */
    .main-container {
        max-width: 800px;
        margin: 40px auto;
        padding: 0 20px;
    }

    .header-section {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 40px;
    }

    .title {
        color: #2c3e50;
        font-size: 2rem;
        margin: 0;
    }

    .form-card {
        background: #fff;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        padding: 30px;
    }

    .form-group {
        margin-bottom: 30px;
    }

    .form-control {
        width: 100%;
        padding: 12px 20px;
        border: 2px solid #e0e0e0;
        border-radius: 8px;
        font-size: 1rem;
        transition: border-color 0.3s ease;
    }

        .form-control:focus {
            border-color: #24E3A7;
            outline: none;
            box-shadow: 0 0 0 3px rgba(36, 227, 167, 0.2);
        }

    .back-button {
        background: #f8f9fa;
        color: #2c3e50;
        padding: 10px 25px;
        border-radius: 8px;
        text-decoration: none;
        transition: all 0.3s ease;
    }

        .back-button:hover {
            background: #e9ecef;
            transform: translateY(-2px);
        }

    .submit-button {
        background: #24E3A7;
        color: white;
        width: 100%;
        padding: 15px;
        border: none;
        border-radius: 8px;
        font-size: 1.1rem;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .submit-button:hover {
            background: #1ec191;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(36, 227, 167, 0.3);
        }

    .text-danger {
        font-size: 0.9rem;
        margin-top: 5px;
        display: block;
    }

    .fas {
        margin-right: 8px;
    }

    .form-actions {
        margin-top: 40px;
    }
</style>

<script>
    $(document).ready(function () {
        // Mantendo a mesma formatação de salário
        $('#SALARIO').on('input', function () {
            let value = $(this).val().replace(/\D/g, '');
            value = (value / 100).toLocaleString('pt-BR', {
                style: 'currency',
                currency: 'BRL'
            });
            $(this).val(value);
        });

        $('#NOME').focus();
    });
</script>